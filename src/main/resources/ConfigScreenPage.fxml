<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.text.Text?>
<GridPane fx:controller="com.example.towerdefence.ConfigScreenPage.ConfigScreenController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center" hgap="10" vgap="10">
    <padding><Insets top="0" right="10" bottom="0" left="10"/></padding>

    <TextField
            GridPane.columnIndex="1" GridPane.rowIndex="1"
            id="entry" text="Enter your name here"/>

    <Text
            GridPane.columnIndex="1" GridPane.rowIndex="0"
            id="namePrompt" text="Name: " />

    <Button
            GridPane.columnIndex="2" GridPane.rowIndex="1"
            id="enter" text="Enter" onAction="#addGridPane"/>

    <Text
            GridPane.columnIndex="1" GridPane.rowIndex="3"
            id="difficultyPrompt" text="Difficulty:"/>

    <Text
            GridPane.columnIndex="1" GridPane.rowIndex="4"
            id="moneyPrompt" text="Money: "/>

    <Button
            GridPane.columnIndex="2" GridPane.rowIndex="3"
            id="easy" text="Easy" onAction="#addGridPane"/>

    <Button
            GridPane.columnIndex="2" GridPane.rowIndex="4"
            id="medium" text="Medium" onAction="#addGridPane"/>

    <Button
            GridPane.columnIndex="2" GridPane.rowIndex="5"
            id="hard" text="Hard" onAction="#addGridPane"/>

    <Button
            GridPane.columnIndex="3" GridPane.rowIndex="7"
            id="startGame" text="Start Game" onAction="#addGridPane"/>

    <Text
            GridPane.columnIndex="4" GridPane.rowIndex="7"
            id="incompletePrompt"/>

</GridPane>
